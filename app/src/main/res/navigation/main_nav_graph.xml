<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/homeFragment">

    <action
        android:id="@+id/aboutFragmentGlobal"
        app:destination="@id/aboutFragment" />
    <action
        android:id="@+id/homeFragmentGlobal"
        app:destination="@id/homeFragment" />
    <action
        android:id="@+id/profileFragmentGlobal"
        app:destination="@id/profileFragment" />
    <action
        android:id="@+id/statsFragmentGlobal"
        app:destination="@id/statsFragment" />

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.vaibhav.taskify.ui.mainScreen.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.vaibhav.taskify.ui.mainScreen.about.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.vaibhav.taskify.ui.mainScreen.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/statsFragment"
        android:name="com.vaibhav.taskify.ui.mainScreen.stats.StatsFragment"
        android:label="fragment_stats"
        tools:layout="@layout/fragment_stats" />
</navigation>